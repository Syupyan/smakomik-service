<!-- pages/comic/u-comic.mustache -->
{{> views/partials/header }}
{{> views/partials/sidebar }}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-white">
                    <div class="card-header">
                        <a class="btn btn-warning btn-sm" href="/comic">
                            <i class="fas fa-arrow-left"></i>
                        </a>                     
                        <div class="float-right">
                            <h3 class="card-title">Update Comic</h3>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <form method="Post" action="/method/comicbook/update/{{comic.IdComic}}" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Name Comic</label>
                                <input type="text" value="{{comic.NameC}}" name="name_c" class="form-control" placeholder="Name Comic">
                            </div>
                            <div class="form-group">
                                <label>Genre</label>
                                <input type="text" value="{{comic.Genre}}" name="genre" class="form-control" placeholder="Genre">
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <input type="text" value="{{comic.CountryC}}" name="country_c" class="form-control" placeholder="Country">
                            </div>
                            <style>
                                .custom-img {
                                    width: 100px;
                                    height: auto;
                                }
                            </style>
                            
                            <div class="form-group">
                                <label>Review Image <b>(click image)</b></label>
                                <div class="col-sm-3">
                                    <a href="/assets/comic-image/comic-cover/{{comic.Image}}" data-toggle="lightbox" data-title="Image Preview" data-gallery="gallery">
                                        <img src="/assets/comic-image/comic-cover/{{comic.Image}}" class="img-fluid mb-2 custom-img" alt="black sample"/>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Cover image comic</label>
                                <div class="input-group">
                                  <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="file" id="exampleInputFile">
                                    <label class="custom-file-label">Choose file</label>
                                  </div>
                                  <div class="input-group-append">
                                    <span class="input-group-text">Upload</span>
                                  </div>
                                </div>
                              </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{> views/partials/footer }}

