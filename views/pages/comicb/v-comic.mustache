{{> views/partials/header }}
{{> views/partials/sidebar }}
    <!-- Main content -->
    <div class="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
  
              <div class="card card-outline">
                <div class="card-header">
                  <h5 class="card-title m-0">Comic</h5>
                  <div class="float-right">
                    <a class="btn btn-primary btn-xl" href="/comic/create">
                        <i class="fas fa-plus">
                        </i>
                    </a>
                  </div>
                </div>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                          <th>Image</th>
                          <th>Name Comic</th>
                          <th>Genre</th>
                          <th>Country</th>
                          <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                          {{#comics}}
                        <tr>
                          <td>
                            <a  href="/assets/comic-image/comic-cover/{{Image}}" data-toggle="lightbox" data-title="Image Preview" data-gallery="gallery">
                              <img  src="/assets/comic-image/comic-cover/{{Image}}" alt="" class="brand-image" style="height: 60px; width: 69px; margin: 0 auto; display: block;">
                          </a>
                          </td>
                          <td>{{NameC}}</td>
                          <td>{{Genre}}</td>
                          <td>{{CountryC}}</td>
                          <td style="width: 200px;">
                            <form method="POST" action="/method/comicbook/delete/{{IdComic}}">
                            <a class="btn btn-primary btn-sm" href="/comic/detail/{{IdComic}}">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                          <a class="btn btn-info btn-sm" href="/comic/update/{{IdComic}}">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                            <button type="submit" class="btn btn-danger btn-sm">
                              <i class="fas fa-trash"></i> Delete
                            </button>
                          </form>
                          </td>
                        </tr>
                        {{/comics}}
                        </tbody>
                      </table>
                </div>
              </div>
            </div>
            <!-- /.col-md-6 -->
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{{> views/partials/footer }}